#!/bin/bash -i

ROOT_DIR=$(git rev-parse --show-toplevel)
. "$ROOT_DIR/lib/common.sh"

for file in $FILES; do
  if [ -n "$(git status --porcelain "$file")" ]; then
    echo -e "$file has been changed. Reset it before uninstalling..\n"
    git diff $file
    exit 1
  fi

  TARGET_FILE="$TARGET_DIR/.$(basename $file)"

  # Removing the file will delete the hard link.
  rm -f $file
  # Then simple checkout the file to restore it without the link
  git co -- $file

  echo -n "Delete ${TARGET_FILE} (y/N)? "
  read -e rm_target

  if [ -n "$rm_target" ]; then
    rm_target=${rm_target,,} # Lower case
    if [[ "$rm_target" =~ ^y.* ]]; then
      rm $TARGET_FILE
    fi
  fi
done

