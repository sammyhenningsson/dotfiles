require 'policies/<%= name %>'

module Serializers
  class <%= class_name %>
    extend HALPresenter
    extend Shaf::UriHelper

    model <%= model_class_name %>
    policy <%= policy_class_name %>
    <% attributes.each do |attr| %>
    <%= attr.join("\n    ") %>
    <% end %>
    <% links.each do |link| %>
    <%= link.join("\n    ") %>
    <% end %>
    <% embeds.each do |embed| %>
    <%= embed.join("\n    ") %>
    <% end %>
    <% if collection %>
    <%= collection.join("\n    ") %>
    <% end %>
  end
end
